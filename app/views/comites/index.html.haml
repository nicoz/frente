#comites.principal
  #cabezal
    %h1 Visor de Comitees
    = link_to 'Nueva Comite', new_comite_path(), :class => 'nuevo'

  #busqueda
    =form_tag( search_comite_path, :method => "POST") do
      %input{:type => "text", :class => "busqueda", :name => 'text'}
      %button{:type => "submit", :class =>"buscar"}
        Buscar

  #cuerpo
    - if !@resultado.nil?
      = @resultado
    .pagination
      = will_paginate @comites, :renderer => PaginationListLinkRenderer

    = render 'tabla', :comites => @comites
    
    .pagination
      = will_paginate @comites, :renderer => PaginationListLinkRenderer