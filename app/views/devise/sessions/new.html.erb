
<div class="container" id="login">
  <div class="row">
    <div class="formulario span6 offset3">      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'})  do |f| %>
        <fieldset>
          <legend>Frente Amplio Paysandu Adherentes - Ingreso</legend>
          <%= devise_error_messages! %>
          <div class="control-group">
            <label class="control-label"> Email </label>
            <div class="controls">
              <%= f.email_field :email, :class => "input-xlarge", :style => "height:30px" %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label"> Contrase√±a </label>
            <div class="controls">
              <%= f.password_field :password, :class => "input-xlarge", :style => "height:30px" %>
            </div>
          </div>
         
          <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <label class="control-label"> Recordarme </label>
              <div class="controls">
                <%= f.check_box :remember_me, :label => 'Recordarme' %>
              </div>
            </div>                                 
          <% end -%>
        </fieldset>
        <div class="form-actions">
          <%= f.submit :class => 'btn btn-primary btn-large', :value => 'Ingresar' %>


        </div>

        
        <% end %>

        <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>
